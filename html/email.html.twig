<mjml>
  <mj-body>
    <mj-raw>
        <!-- Header -->
    </mj-raw>
    <mj-section background-color="#fed700">
        <mj-column>
          <mj-image alt="Logo with JDVz initials in yellow on a black background." height="55px" href="https://jdvz.net" src="{{ getAssetUrl('themes/'~theme~'/assets/logo-1-150x91.png', null, null, true) }}" title="Homepage" />
        </mj-column>
        <mj-column>
          <mj-button background-color="#fec700" border-radius="10px" color="#000" font-family="sans-serif" font-size="16px" font-weight="700" href="{webview_url}">
            View in browser
          </mj-button>
        </mj-column>
    </mj-section>
    <mj-raw>
        <!-- Main content -->
    </mj-raw>
    <mj-section>
      <mj-column>
        <mj-button background-color="#fff" color="#000" font-family="sans-serif" font-size="24px" font-weight="700" href="{webview_url}">
          Title
        </mj-button>
        <mj-text font-family="sans-serif" font-size="16px" font-weight="700" align="center" padding="10px 25px 20px">
          Message
        </mj-text>
        <mj-button background-color="#2468ff" border-bottom="6px solid #000" border-radius="10px" color="#fff" font-family="sans-serif" font-size="24px" font-weight="700" href="{webview_url}">
          Button
        </mj-button>
      </mj-column>
    </mj-section>
    <mj-raw>
        <!-- Footer -->
    </mj-raw>
    <mj-section background-color="#fed700">
      <mj-column>
        <mj-button background-color="#fec700" border-radius="10px" color="#000" font-family="sans-serif" font-size="16px" font-weight="700" href="{unsubscribe_url}">
          Unsubscribe or Update preferences
        </mj-button>
        <mj-social color="#000" font-family="sans-serif" font-size="16px" font-weight="700" icon-size="24px">
          <mj-social-element alt="YouTube" background-color="transparent" href="https://youtube.com/c/JDVznet" name="youtube" src="{{ getAssetUrl('themes/'~theme~'/assets/yt-icon.png', null, null, true) }}" title="YouTube">
          </mj-social-element>
          <mj-social-element alt="Facebook" background-color="transparent"	href="https://www.facebook.com/jdvznet" name="facebook" src="{{ getAssetUrl('themes/'~theme~'/assets/fb-icon.png', null, null, true) }}" title="Facebook">
          </mj-social-element>
          <mj-social-element alt="Instagram" background-color="transparent" href="https://www.instagram.com/jdvznet/" name="instagram" src="{{ getAssetUrl('themes/'~theme~'/assets/ig-icon.png', null, null, true) }}" title="Instagram">
          </mj-social-element>
          <mj-social-element alt="TikTok" background-color="transparent" href="https://www.tiktok.com/@jdvznet" name="tiktok" src="{{ getAssetUrl('themes/'~theme~'/assets/tk-icon.png', null, null, true) }}" title="TikTok">
          </mj-social-element>
          <mj-social-element alt="Twitter" background-color="transparent" href="https://twitter.com/jdvznet" name="twitter" src="{{ getAssetUrl('themes/'~theme~'/assets/tw-icon.png', null, null, true) }}" title="Twitter">
          </mj-social-element>
          <mj-social-element alt="LinkedIn" background-color="transparent" href="http://www.linkedin.com/in/jdvznet" name="linkedin" src="{{ getAssetUrl('themes/'~theme~'/assets/lkin-icon.png', null, null, true) }}" title="LinkedIn">
          </mj-social-element>
        </mj-social>
        <mj-text font-family="sans-serif" font-size="16px" font-weight="700" align="center">
          Let me know what you think about these emails:
        </mj-text>
        <mj-button background-color="#fec700" border-radius="10px" color="#000" font-family="sans-serif" font-size="16px" font-weight="700" href="https://jdvz.net/contact/">
          Contact me
        </mj-button>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>