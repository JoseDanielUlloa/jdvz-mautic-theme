{% extends ":"~template~":base.html.twig" %}

{% block content %}
    <div class="default-page">
        <main id="main-content">
            {% if message is defined %}
                <div>
                    <p>{{ message|raw }}</p>
                </div>
            {% endif %}

            <div>
                {% if header is defined %}
                    <h2>
                        {{ header }}
                    </h2>
                {% endif %}

                {{ content|raw  }}
            </div>
        </main>
    </div>
{% endblock %}